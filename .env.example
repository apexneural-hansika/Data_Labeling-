# =============================================================================
# DATA LABELING SYSTEM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# =============================================================================
# API KEYS (REQUIRED)
# =============================================================================

# OpenAI API Key (required)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI Direct API Key (optional - for Whisper if using OpenRouter for other models)
# Only set this if you're using OpenRouter but want to use direct OpenAI for Whisper/Embeddings
# OPENAI_DIRECT_API_KEY=sk-your-openai-direct-api-key-here

# DeepSeek API Key (optional)
# Get from: https://platform.deepseek.com/
# DEEPSEEK_API_KEY=your-deepseek-api-key-here

# =============================================================================
# OPENROUTER CONFIGURATION (OPTIONAL)
# =============================================================================

# Use OpenRouter instead of direct OpenAI (default: false)
# Set to 'true' to route requests through OpenRouter
USE_OPENROUTER=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Supabase PostgreSQL Database URL with pgvector support
# Format: postgresql://user:password@host:port/database
SUPABASE_DB_URL=postgresql://postgres:password@localhost:5432/database_name

# Enable/disable embedding storage in database (default: true)
ENABLE_EMBEDDING_STORAGE=true

# =============================================================================
# EMBEDDING PROVIDER CONFIGURATION
# =============================================================================

# Embedding provider: 'auto' (try HuggingFace, fallback to OpenAI), 'huggingface', or 'openai'
EMBEDDING_PROVIDER=auto

# HuggingFace model for embeddings (default: sentence-transformers/all-MiniLM-L6-v2)
# Popular options:
#   - sentence-transformers/all-MiniLM-L6-v2 (384 dim, fast, good quality)
#   - sentence-transformers/all-MiniLM-L12-v2 (384 dim, better quality)
#   - sentence-transformers/all-mpnet-base-v2 (768 dim, best quality, slower)
HUGGINGFACE_MODEL=sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# GUARDRAILS CONFIGURATION
# =============================================================================

# Enable/disable all guardrails (default: true)
ENABLE_GUARDRAILS=true

# Enable content filtering (default: true)
ENABLE_CONTENT_FILTER=true

# Enable PII detection (default: true)
ENABLE_PII_DETECTION=true

# Enable category restrictions (default: false)
ENABLE_CATEGORY_RESTRICTIONS=false

# Minimum quality threshold (0.0 to 1.0, default: 0.6)
MIN_QUALITY_THRESHOLD=0.6

# Blocked categories (comma-separated, optional)
# Example: BLOCKED_CATEGORIES=nsfw,violent,illegal
BLOCKED_CATEGORIES=

# Allowed categories (comma-separated, optional - if set, only these categories allowed)
# Example: ALLOWED_CATEGORIES=document,invoice,receipt
ALLOWED_CATEGORIES=

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================

# Enable/disable all caching (default: true)
ENABLE_CACHING=true

# Enable in-memory cache (default: true)
ENABLE_MEMORY_CACHE=true

# Enable database cache (default: true)
ENABLE_DB_CACHE=true

# Memory cache size (number of items, default: 100)
MEMORY_CACHE_SIZE=100

# Memory cache TTL in seconds (default: 3600 = 1 hour)
MEMORY_CACHE_TTL=3600

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================

# Flask secret key (auto-generated if not set)
# Generate with: python -c "import os; print(os.urandom(24).hex())"
SECRET_KEY=your-secret-key-here

# Flask debug mode (default: false in production)
FLASK_DEBUG=false

# Flask host (default: 0.0.0.0)
FLASK_HOST=0.0.0.0

# Flask port (default: 5000)
FLASK_PORT=5000

# Upload folder path (default: uploads)
UPLOAD_FOLDER=uploads

# Max upload size in bytes (default: 100MB)
MAX_CONTENT_LENGTH=104857600

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO

# Log file path (default: logs/system.log)
LOG_FILE=logs/system.log

# Enable console logging (default: true)
ENABLE_CONSOLE_LOGGING=true

# =============================================================================
# RATE LIMITING
# =============================================================================

# Maximum requests per window (default: 10)
RATE_LIMIT_REQUESTS=10

# Rate limit window in seconds (default: 60)
RATE_LIMIT_WINDOW=60

# =============================================================================
# WORKER AND TASK CONFIGURATION
# =============================================================================

# Maximum number of background workers (default: 3)
MAX_WORKERS=3

# Task timeout in seconds (default: 600 = 10 minutes)
TASK_TIMEOUT=600

# Default operation timeout in seconds (default: 300 = 5 minutes)
DEFAULT_TIMEOUT=300

# API call timeout in seconds (default: 60 = 1 minute)
API_TIMEOUT=60

# =============================================================================
# RESOURCE CLEANUP
# =============================================================================

# Cleanup interval in minutes (default: 60)
CLEANUP_INTERVAL_MINUTES=60

# File maximum age in hours before cleanup (default: 24)
FILE_MAX_AGE_HOURS=24

# =============================================================================
# ENVIRONMENT
# =============================================================================

# Environment: development, staging, or production (default: development)
ENV=development
